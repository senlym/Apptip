                    android:layout_marginBottom="0dp"
                    android:allowUndo="true"
                    android:background="@drawable/shape_bg"
                    android:backgroundTint="@color/darkGrey"
                    android:contextClickable="true"
                    android:dropDownWidth="@dimen/dimen150dp"
                    android:dropDownHorizontalOffset="0dp"
                    android:dropDownSelector="@color/darkGrey"
                    android:fadeScrollbars="true"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:gravity="top|start"
                    android:inputType="none"
                    android:nestedScrollingEnabled="true"
                    android:overScrollMode="ifContentScrolls"
                    android:padding="0dp"
                    android:scrollbars="horizontal|vertical"
                    android:scrollHorizontally="true"
                    android:tag="code"
                    android:textDirection="firstStrong"
                    android:textIsSelectable="true"
                    android:textSize="14sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="1.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView7" />

                <RelativeLayout
                    android:id="@+id/source_info_layout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="8dp"
                    android:background="@color/black"
                    android:visibility="visible"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/codeView">

                    <TextView
                        android:id="@+id/language_name_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentLeft="true"
                        android:layout_marginStart="@dimen/dimen5dp"
                        android:layout_marginLeft="@dimen/dimen5dp"
                        android:gravity="center"
                        android:textColor="@color/grey"
                        tools:text="Java" />

                    <TextView
                        android:id="@+id/source_position_txt"
                        android:layout_width="37dp"
                        android:layout_height="match_parent"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_marginStart="307dp"
                        android:layout_marginEnd="@dimen/dimen5dp"
                        android:layout_marginRight="@dimen/dimen5dp"
                        android:layout_toEndOf="@+id/language_name_txt"
                        android:gravity="center"
                        android:textColor="@color/grey"
                        tools:text="0:0" />

                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearLayout3"
                android:layout_width="362dp"
                android:layout_height="121dp"
                android:layout_below="@+id/linearLayout2"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="11dp"
                android:background="@drawable/shape_bg"
                android:gravity="end"
                android:nestedScrollingEnabled="true"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/background_header"
                    android:freezesText="false"
                    android:paddingStart="15dp"
                    android:tag="2"
                    android:text="DescripciÃ³n"
                    android:textAlignment="textStart"
                    android:textColor="#EFE9E2"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <com.amrdeveloper.codeview.CodeView
                    android:id="@+id/codeViewmain2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="0dp"
                    android:layout_marginLeft="0dp"
                    android:layout_marginTop="0dp"
                    android:layout_marginEnd="0dp"
                    android:layout_marginRight="0dp"
                    android:layout_marginBottom="0dp"
                    android:allowUndo="true"
                    android:background="@drawable/shape_bg"
                    android:backgroundTint="@color/whiteCardColor"
                    android:contextClickable="true"
                    android:dropDownWidth="@dimen/dimen150dp"
                    android:dropDownHorizontalOffset="0dp"
                    android:dropDownSelector="@color/darkGrey"
                    android:fadeScrollbars="true"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:gravity="top|start"
                    android:nestedScrollingEnabled="true"
                    android:overScrollMode="ifContentScrolls"
                    android:padding="2dp"
                    android:scrollbars="horizontal|vertical"
                    android:scrollHorizontally="true"
                    android:tag="resena"
